<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="csc415.towerdefense.MainMenu"
    android:background="@drawable/bluemainmenu">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal|bottom"
        android:src="@drawable/towermainmenu" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_gravity="center_horizontal|top"
        android:src="@drawable/titlemainmenu"
        android:layout_marginTop="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnOptions"
            android:layout_gravity="center_horizontal|bottom"
            android:src="@drawable/optionsmainmenu"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/btnPlay"
            android:layout_alignStart="@+id/btnPlay" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnPlay"
            android:layout_gravity="bottom|center_horizontal"
            android:src="@drawable/playmainmenu"
            android:layout_above="@+id/btnOptions"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnLoadGame"
            android:layout_gravity="bottom|center_horizontal"
            android:src="@drawable/loadmainmenu"
            android:layout_above="@+id/btnPlay"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</FrameLayout>
